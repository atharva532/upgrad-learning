# ===========================================
# Docker Compose Environment Variables
# ===========================================
# Copy this file to .env and adjust values as needed

# PostgreSQL Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=upgrad_learning

# Backend API
API_PORT=3000
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/upgrad_learning?schema=public

# Frontend (build-time)
VITE_API_URL=http://localhost:3000

# JWT Authentication
JWT_SECRET=your-super-secret-key-change-in-production

# OTP Authentication
OTP_SECRET=your-otp-hmac-secret-key-minimum-32-chars

# Email (Resend)
# Leave empty to use console logging in development
RESEND_API_KEY=
EMAIL_FROM=UpGrad Learning <noreply@upgrad.com>
